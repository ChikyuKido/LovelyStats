$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Panel {
    Anchor: (Width: 780, Height: 750);
    Padding: (Full: 15);
    LayoutMode: Top;

    Group #Base {
        FlexWeight: 1;
        LayoutMode: Top;

        Group #TabButtons {
            LayoutMode: Left;
            Padding: (Top: 10, Left: 10, Bottom: 10);

            Button #PlayersTab {
                Padding: (Right: 15);
                Group #PlayersTabImage {
                    Background: "../player.png";
                    Anchor: (Width: 60, Height: 60);
                }
            }
            Group {
                Anchor: (Width: 2, Height: 70);
                Background: #FFFFFF;
            }
            Button #PlaytimeTab {
                Padding: (Left: 15, Right: 15);

                Group #PlaytimeTabImage {
                   Background: "../time.png";
                   Anchor: (Width: 60, Height: 60);
                }
            }
            Group {
                Anchor: (Width: 2, Height: 70);
                Background: #FFFFFF;
            }
            Button #BlocksTab {
                Padding: (Left: 15, Right: 15);
                Group #BlocksTabImage{
                    Background: "../blocks.png";
                    Anchor: (Width: 60, Height: 60);
                }
            }
            Group {
                Anchor: (Width: 2, Height: 70);
                Background: #FFFFFF;
            }
            Button #EntityTab {
                Padding: (Left: 15, Right: 15);
                Group #EntityTabImage {
                    Background: "../entity.png";
                    Anchor: (Width: 60, Height: 60);
                }
            }
        }

        Group {
            Padding: (Top: 20);
            Anchor: (Height: 2);
            Background: #FFFFFF;
        }

        Group #TabPages {
            FlexWeight: 1;
            LayoutMode: Top;
        }
    }

    $C.@BackButton {
        Anchor: (Bottom: 5, Left: 5);
        Padding: (Top: 10);
    }
}